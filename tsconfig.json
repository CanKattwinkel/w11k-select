{
  "extends": "./config/tsconfig.flexible",
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "module": "umd",
    "declaration": true,
    "importHelpers": false,
    "inlineSourceMap": false,
    "listFiles": false,
    "traceResolution": false,
    "pretty": false,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compileOnSave": false
}
